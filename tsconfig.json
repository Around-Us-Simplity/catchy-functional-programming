{
  "compilerOptions": {
    "declaration": false,
    "baseUrl": ".",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["**/*.ts", "@types"],
  "exclude": ["dist", "build", "node_modules", ".yarn"],
  "ts-node": {
    "esm": true
  }
}
